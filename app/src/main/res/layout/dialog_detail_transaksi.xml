<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_dialog_detail_transaksi_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Transaksi" />

    <TextView
        android:id="@+id/tv_dialog_detail_transaksi_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Transaksi" />
    <TextView
        android:id="@+id/tv_dialog_detail_transaksi_nama_pelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atas Nama" />

    <TextView
        android:id="@+id/tv_dialog_detail_transaksi_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Transaksi" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListItemTransaksi"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingVertical="6dp"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_cashier_transaction"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_dialog_detail_transaksi_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Harga" />

    <Button
        android:id="@+id/btn_dialog_detail_transaksi_selesaikan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selesaikan Transaksi"
        android:visibility="gone" />

</LinearLayout>